{
  "name": "hospital-backend-system-gigsama-test",
  "version": "1.0.0",
  "description": "a backend system for a hospital that handles user signups, patient- doctor assignments, doctor note submissions, and dynamic scheduling of actionable steps based on live LLM processing.",
  "main": "index.js",
  "scripts": {
    "build": "prisma generate",
    "start": "node ./dist/src/index.js",
    "compile": "tsc -p ./tsconfig.json",
    "dev": "ts-node-dev --respawn ./src/index.ts",
    "seed-admin": "ts-node ./prisma/createAdmin.ts",
    "seed-admin-npass": "ts-node ./prisma/changeAdminPassword.ts",
    "seek-admins": "ts-node ./prisma/listAdmins.ts",
    "test": "TEST=true jest",
    "test:watch": "TEST=true jest --watch",
    "postgres:start": "docker-compose up -d",
    "db:push": "prisma db push",
    "migrate:reset": "prisma migrate reset",
    "migrate:create": "prisma migrate dev --create-only",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy"
  },
  "keywords": [],
  "author": "Atogebania Alexander",
  "license": "ISC",
  "dependencies": {
    "@hapi/hapi": "^21.3.12",
    "@hapi/inert": "^7.1.0",
    "@hapi/vision": "^7.0.3",
    "@prisma/client": "^6.4.1",
    "bcryptjs": "^3.0.2",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "fs-extra": "^11.3.0",
    "hapi-graceful-pm2": "^1.0.17",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/hapi-auth-jwt2": "^8.6.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.13.5",
    "@types/winston": "^2.4.4",
    "prisma": "^6.4.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.2"
  }
}
